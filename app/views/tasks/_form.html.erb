<div class="container">
  <%= form_with model: task, class: "mt-4" do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_field :details, class: "form-control" %>
    </div>
    <div class="mt-3">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
